    z80run({
        // pop ix
        0xddu8, 0xe1u8,
        HALT
    });
    ASSERT(z80_sp == (u16)&dst + 4u16);
    ASSERT(z80_ix == 0xabcdu16);

    z80_sp = (u16)&dst + 1u16;
    z80_iy = 0u16;
    z80run({
        // pop iy
        0xfdu8, 0xe1u8,
        HALT
    });
    ASSERT(z80_sp == (u16)&dst + 3u16);
    ASSERT(z80_iy == 0xcdefu16);

    ok();
}

