struct Opcode8WithAddress {
    u8 opcode;
    u8 *src;
    u8 halt;
};

struct Opcode16WithAddress {
    u8 prefix;
    u8 opcode;
    u8 *src;
    u8 halt;
};

u8 test_ld_a_indir_imm16() {
    test_number = 5u8;
    u8 src = 0x67u8;
    z80_a = 0u8;
    struct Opcode8WithAddress code;
    code.opcode = 0x3au8; // ld a, (imm16)
    code.src = &src;
    code.halt = HALT;
    z80run((u8*)&code);
    ASSERT(z80_a == 0x67u8);

    z80_a = 0x12u8;
    code.opcode = 0x32u8; // ld (imm16), a
    z80run((u8*)&code);
    ASSERT(src == 0x12u8);
    ok();
}

u8 test_ld_a_indir_bcde() {
